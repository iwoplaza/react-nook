{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "files": {
    "includes": ["**/*.ts", "**/*.mjs", "!.astro"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": { "noUnusedImports": "error" }
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  },
  "javascript": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "indentStyle": "space",
      "quoteStyle": "single"
    }
  }
}
